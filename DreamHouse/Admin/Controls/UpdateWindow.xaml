<UserControl x:Class="Admin.Controls.UpdateWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Admin.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1300">
    <Grid Background="#77000000">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="1000">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Пожалуйста, подождите" Foreground="White" FontFamily="../Fonts/#Geometria Bold" FontSize="32" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                <TextBlock Text="Идет загрузка данных" Foreground="White" FontFamily="../Fonts/#Geometria Bold" FontSize="32" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
            </StackPanel>
            <Grid Grid.Row="1" Margin="0,50,0,0">
                <local:PreLoader Width="200" Height="200"></local:PreLoader>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
