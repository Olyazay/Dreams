<UserControl x:Class="DreamHouse.Controls.UpdateWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DreamHouse.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="3840" d:DesignWidth="2160">
    <Grid Background="#77000000">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="1000">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Приносим извинения" Foreground="White" FontFamily="../Fonts/#Geometria Bold" FontSize="64" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                <TextBlock Text="Идет обновление данных" Foreground="White" FontFamily="../Fonts/#Geometria Bold" FontSize="64" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
            </StackPanel>
            <Grid Grid.Row="1" Margin="0,100,0,0">
                <local:PreloaDer></local:PreloaDer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
